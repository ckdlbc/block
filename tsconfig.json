{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "pretty": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["@types/jest", "url-template", "qs", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*/**"]
}
